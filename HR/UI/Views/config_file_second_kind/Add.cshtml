
@{
    Layout = null;
}

<!DOCTYPE html>
@using UI.Common
@model Model.config_file_second_kindModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/css/table.css" rel="stylesheet" />
</head>
<body>
   @using (Ajax.BeginForm("Add", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "show" }))
   {
        <input type="hidden" id="firstKindName" name="cfsk.firstKindName">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back();">
                </td>
            </tr>
        </table>


        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="19%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="81%" class="TD_STYLE2">
                 @Html.DropDownList("first_kind_id", ViewBag.dt as IEnumerable<SelectListItem>, new { @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="81%" class="TD_STYLE2">
                    @Html.TextBoxFor(model => Model.second_kind_id, new { @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    II级机构名称
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBoxFor(model => Model.second_kind_name, new { @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                 @Html.TextAreaFor(model => Model.second_salary_id, new { @class = "INPUT_STYLE1", @rows = "4", @cols = "120" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @Html.TextAreaFor(model => Model.second_sale_id, new { @class = "INPUT_STYLE1", @rows = "4", @cols = "120" })
                </td>
            </tr>
        </table>
   }
</body>
</html>
