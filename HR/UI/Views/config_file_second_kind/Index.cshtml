
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>  
    <div id="divss">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href = '../config_file_second_kind/Add'" />
                    
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="15%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="15%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="15%" class="TD_STYLE1">
                    II级机构名称
                </td>
                <td width="22%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="22%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>

            <tr v-for="(item,i) in rows">
                <td class="TD_STYLE2">
                    {{item.first_kind_name }}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_id }}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name }}
                </td> 
                <td class="TD_STYLE2">
                    {{item.second_salary_id }}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_sale_id  }}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_second_kind/Update/'+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    <a href="#" v-on:click="del(item.Id)">删除</a>
                </td>
            </tr>


        </table>
        <br><br>
        <th colspan="7" class="pager"></th>
        <p>
    </div>
    <script type="text/javascript"> 
        var vm = new Vue({
            el: "#divss",
            data: {
                rows:null
            },
            methods: {
                load: function () {
                    var v = this;
                    $.ajax({
                        url: "../config_file_second_kind/Select",
                        type: "post",
                        success: function (msg) {
                           
                            var data = eval("(" + msg + ")");
                            v.rows = data;
                        }
                    });
                },
                del: function (id) {
                    if (confirm("是否删除?")) {
                        $.ajax({
                            url: "../config_file_second_kind/Dele/"+id,
                            type: "post",
                            success: function (msg) {
                                if (msg == "OK") {
                                    alert("删除成功!");
                                    vm.load();
                                } else {
                                    alert("删除失败!");
                                }
                            }
                        })
                    }
                }
              
            }
        });
        vm.load();
    </script>
</body>
</html>
