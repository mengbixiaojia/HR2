
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>major</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="div1"> 
        <form method="post" action="../customiz/customizAction!findMajor">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @Html.ActionLink("添加", "major_add", new { @class= "BUTTON_STYLE1" })
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="22%" class="TD_STYLE1">
                        职位分类编号
                    </td>
                    <td width="23%" class="TD_STYLE1">
                        职位分类名称
                    </td>
                    <td width="26%" class="TD_STYLE1">
                        职位编号
                    </td>
                    <td width="24%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>
                <tr v-for="(item,index) in dt">
                    <td class="TD_STYLE2">{{item.major_kind_id}}</td>
                    <td class="TD_STYLE2">{{item.major_kind_name}}</td>
                    <td class="TD_STYLE2">{{item.major_id}}</td>
                    <td class="TD_STYLE2">{{item.major_name}}</td>
                    <td class="TD_STYLE2"><a v-bind:href="['/config_major/Delete/'+item.Id]" onclick="return confirm('是否确定删除')">删除</a></td>
                </tr>
            </table>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_major/Index2",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                        }
                    })
                }
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
