
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
</head>
<body>
    <div id="divsss">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--薪酬管理设置--薪酬项目设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href = '../config_public_char/Add'">
                   
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr height="20">
                <td width="80%" class="TD_STYLE1" align="center">
                    薪酬项目名称
                </td>
                <td width="20%" class="TD_STYLE1" align="center">
                    删除
                </td>
            </tr>


            <tr height="20" v-for="(item,i) in rows">
                <td class="TD_STYLE2">
                    {{item.attribute_name }}
                </td>
                <td align="center" class="TD_STYLE2">
                    <a href="#" v-on:click="Del(item.Id)" >删除</a>
                </td>
            </tr>

           
        </table>
        <br>
        <br>
        <th colspan="7" class="pager"></th>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#divsss",
            data: {
                rows:null
            },
            methods: {
                load: function () {
                    var v = this;
                    $.ajax({
                        url: "../config_public_char/Select",
                        type: "post",
                        success: function (msg) {
                            var data = eval("(" + msg + ")");
                            v.rows = data;
                        }

                    })
                },
                Del: function (id) {
                    if (confirm("是否删除?")) {
                        $.ajax({
                            url: "../config_public_char/Del/"+id,
                            type: "post",
                            success: function (msg) {
                                if (msg == "OK") {
                                    alert("删除成功!");
                                    vm.load();
                                } else {
                                    alert("删除失败!");
                                }
                            }

                        })
                    }
                }
            }
        })
        vm.load();
    </script>
</body>
</html>
