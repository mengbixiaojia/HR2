
@{
    Layout = null;
}

<!DOCTYPE html>
@model Model.usersModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>user_add</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/user_add.js"></script>
    <script src="~/Scripts/jquery.messager.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div> 
@using (Ajax.BeginForm("user_add", new AjaxOptions() { HttpMethod = "post" }))
{
        <form method="post" action="success.html">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--权限管理--添加用户</font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input id="Submit1" type="submit" value="提交" class="BUTTON_STYLE1" />
                        <input id="Submit1" type="button" value="返回" class="BUTTON_STYLE1" />  
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1">用户名称</td>
                    <td width="81%" class="TD_STYLE2">
                    @Html.TextBox("u_name", Model.u_name)
                    @Html.ValidationMessageFor(e => e.u_name)
                    </td>
                    <td class="TD_STYLE1">用户密码</td>
                    <td class="TD_STYLE2">
                       @Html.TextBox("u_password", Model.u_password)
                    @Html.ValidationMessageFor(e => e.u_password)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">真实姓名</td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("u_true_name", Model.u_true_name)
                        @Html.ValidationMessageFor(e => e.u_true_name)
                    </td>
                    <td class="TD_STYLE1">用户身份</td>
                    <td class="TD_STYLE2">
                        @Html.DropDownList("RoleID", @ViewBag.dt as IEnumerable<SelectListItem>)
                        </td>
</tr>
            </table>
        </form>
}
    </div>
</body>
</html>
