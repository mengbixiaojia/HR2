
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>user_list</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--用户管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前角色总数：@ViewData["zs"]例
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添加", "user_add", new { @class = "BUTTON_STYLE1" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    用户编号
                </td>
                <td class="TD_STYLE1">
                    用户名称
                </td>
                <td class="TD_STYLE1">
                    真实姓名
                </td>
                <td class="TD_STYLE1">
                    用户密码
                </td>
                <td class="TD_STYLE1">
                    用户身份
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>
            <tr v-for="(item,index) in dt">
                <td class="TD_STYLE2">{{item.Id}}</td>
                <td class="TD_STYLE2">{{item.u_name}}</td>
                <td class="TD_STYLE2">{{item.u_true_name}}</td>
                <td class="TD_STYLE2">{{item.u_password}}</td>
                <td class="TD_STYLE2">{{item.name}}</td>
                <td class="TD_STYLE2"><a v-bind:href="['/user_list/user_edit/'+item.Id]"><img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;"/></a>
             <a v-bind:href="['/user_list/Delete/'+item.Id]" onclick="return confirm('是否确定删除')"><img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;"/></a></td>
            </tr>
        </table>
        <p style="text-align:center;">

            <a href="user_list.html" style="color:black;">首页</a>
            <font color="red">1</font>
            <a href="user_list.html" style="color:black;">尾页</a>

        </p>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/user_list/Index2",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                            console.info(dd);
                        }
                    })
                }
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
