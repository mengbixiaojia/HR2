        var currentPage = 1;
        var vm = new Vue({
            el: "#div1",
            data: {
                rows: null,
                cpage: null,
                pageNo: null,
                row: null,
                pagesCount: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/user_list/Index2/" + currentPage,
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.rows = dd.dt;
                            t.row = dd.rows;
                            t.pagesCount = dd.pages;
                            t.pageNo = currentPage;
                        }
                    });
                },
                first: function () {
                    currentPage = 1;
                    this.load();
                },
                back: function () {
                    if (currentPage > 1) {
                        currentPage--;
                    } else {
                        currentPage = 1;
                    }
                    this.load();
                },
                next: function () {
                    if (currentPage < this.pagesCount) {
                        currentPage++;
                    } else {
                        currentPage = this.pagesCount;
                    }
                    this.load();
                },
                last: function () {
                    currentPage = this.pagesCount;
                    this.load();
                },
                go: function () {
                    if (this.cpage <= this.pagesCount) {
                        currentPage = this.cpage;
                        $("#leftPage  p").remove();
                        this.load();
                    } else {
                        alert("没有这么多页!");
                    }
                },

            },
            created: function () {
                this.load();
            }
        });

    </script>
