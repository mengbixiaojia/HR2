           function check() {
               var designer = document.getElementById("designer");
               var standardName = document.getElementById("mc");
               if (designer.value.length <= 0) {
                   alert("制定人不可为空!!!");
                   return;
               }
               if (standardName.value.length <= 0) {
                   alert("薪酬标准名称不可为空!!!");
                   return;
               }

               //都不为空时执行新增，发ajax

           }  //制片人不能为空
           $(document).on("click", "#Button1", function () {
               $("#checkbox").hide();
               setTimeout(function () {
                   price();
               }, 500);

           })
           function price() {
               for (var i = 0; i < $(".price").length; i++) {
                   var num = i + 1;
                   var salary = 'salary' + num;
                   $(".price").eq(i).attr("onkeyup", "countMoney("+num+", '" + salary + "')");
               }
           }

           function countMoney(obj, o) {
               //conselo.log(document.getElementById(o));
               if (isNaN(document.getElementById(o).value) || document.getElementById(o).value < 0) {
                   alert("金额填写错误!");
                   document.getElementById(o).value = "0.00";
                   return;
               }
               var sum = 0;
               for (var i = 1; i <= obj; i++) {
                   var salary = document.getElementById("salary" + i).value;
                   if (salary == "") {
                       salary = "0.00";
                   }
                   sum = Number(sum) + Number(salary);

               }
               document.getElementById("sumSalary").value = sum.toFixed(2);

           }


           function time() {
               var tdate = document.getElementById("Tdate");
               var d = new Date();
               var y = d.getFullYear();
               var moth = d.getMonth() + 1;
               var date = d.getDate();
               var h = d.getHours();
               var m = d.getMinutes();
               var s = d.getSeconds();
               var hh = 20 - 1 - h;
               var mm = 60 - 1 - m;
               var ss = 60 - s;
               if (hh > 0) {
                   mm = mm + 60 * hh;
               }
               if (moth < 10) {
                   moth = "0" + moth;
               }
               if (date < 10) {
                   date = "0" + date;
               }
               if (h < 10) {
                   h = "0" + h;
               }
               if (m < 10) {
                   m = "0" + m;
               }
               if (s < 10) {
                   s = "0" + s;
               }
               if (mm < 10) {
                   mm = "0" + mm;
               }
               if (ss < 10) {
                   ss = "0" + ss;
               }

               tdate.value = y + "-" + moth + "-" + date + " " + h + ":" + m + ":" + s;

           }    //时间
           window.onload = time;
           var out = window.setInterval(time, 1000);



    </script>
