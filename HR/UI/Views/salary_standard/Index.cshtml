
@{
    Layout = null;
}

<!DOCTYPE html>
@model Model.salary_standardModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>

    
        <div id="divsss">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--薪酬标准管理--薪酬标准登记
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="提 交" v-on:click="check" class="BUTTON_STYLE1">
                        <input type="reset" value="返 回" class="BUTTON_STYLE1">
                    </td>
                </tr>
            </table>
            <table id="stable" width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="74" class="TD_STYLE1">
                        薪酬标准编号
                    </td>
                    <td width="168" class="TD_STYLE2">

                        @Html.TextBox("bh","", new { @class = "INPUT_STYLE2", @id = "bh" })
                    </td>
                    <td width="83" class="TD_STYLE1">
                        薪酬标准名称
                    </td>
                    <td width="171" class="TD_STYLE2">

                        @Html.TextBox("mc","", new { @class = "INPUT_STYLE2", @id = "mc" })
                    </td>
                    <td width="170" class="TD_STYLE1">
                        薪酬总额
                    </td>
                    <td width="138" class="TD_STYLE2">

                        @Html.TextBox("ze","", new { @class = "INPUT_STYLE2", @id = "sumSalary", @readonly = "readonly" })
                    </td>
                    <td width="103" class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td width="95" height="26" class="TD_STYLE2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        制定人
                    </td>
                    <td class="TD_STYLE2">

                        @Html.TextBox("zdr", "", new { @class = "INPUT_STYLE2", @id = "zdr" })
                    </td>
                    <td class="TD_STYLE1">
                        登记人
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("djr","", new { @class = "INPUT_STYLE2", @id = "djr",  })
                    </td>
                    <td class="TD_STYLE1">
                        登记时间
                    </td>
                    <td class="TD_STYLE2">
                        <input type="text" id="Tdate" name="standard.registTime" readonly="readonly" class="INPUT_STYLE2">
                    </td>
                    <td class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td class="TD_STYLE2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        备注
                    </td>
                    <td colspan="7" class="TD_STYLE2">

                        @Html.TextArea("bz", "", new { @rows = "4", @class = "TEXTAREA_STYLE1", @id = "bz" })
                    </td>
                </tr>
                <tr class="TD_STYLE1">
                    <td align="center">
                        序号
                    </td>
                    <td colspan="3">
                        薪酬项目名称
                    </td>
                    <td>
                        金额
                    </td>
                    <td colspan="3">
                        &nbsp;
                    </td>
                </tr>
                <tbody id="tb">
                  
                </tbody>
            </table>
            <p>
                &nbsp;
            </p>
        </div>
    
    <script type="text/javascript">
        var sum = 0;
        var cd = 0;
          var vm = new Vue({
              el: "#divsss",
              data: {
                  rows:null
              },
              methods:{
                  load:function(){
                      var v = this;
                      $.ajax({
                          url: "/salary_standard/Select",
                          type: "post",
                          success: function (msg) {
                              var dt = eval("(" + msg + ")");
                              for (var i = 0; i < dt.length; i++) {
                                  var $tr = $("<tr class='TD_STYLE2'></tr>");
                                  var $td = $("<td align='center'>" + dt[i]["Id"] + "<input type='hidden' id='pid" + i + "' value='" + dt[i]["Id"] + "'></td>");
                                  var $td1 = $("<td colspan='3'>" + dt[i]["attribute_name"] + "<input type='hidden' id='details" + (i + 1) + "' name='details[" + i + "].itemName' value='" + dt[i]["attribute_name"] + "'></td>");
                                  var $td2 = $('<td><input  type="text" onkeyup="countMoney('+(i + 1) +')"  id="salary' + (i + 1) + '" value="0.00" name="details[' + i + '].salary" class="INPUT_STYLE2" ></td>');
                                  var $td3 = $("<td colspan='3'>&nbsp;</td>");
                                  $tr.append($td, $td1, $td2, $td3);
                                  $("#tb").append($tr);
                                  $("#salary" + (i + 1)).data("key", (i + 1));
                                  cd = dt.length;
                                 
                                 
                              }

                          }
                      });
                  },
                  check: function () {
                      var designer = document.getElementById("zdr");
                      var standardName = document.getElementById("mc");
                      if (designer.value.length <= 0) {
                          alert("制定人不可为空!!!");
                          return;
                      }
                      if (standardName.value.length <= 0) {
                          alert("薪酬标准名称不可为空!!!");
                          return;
                      }
                      if ($("#bh").val == "") {
                          alert("编号不能为空!!!");
                          return;
                      }
                      if ($("#djr").val() == "") {
                          alert("登记人不能为空!!!");
                          return;
                      }
                      var salary_standard = {
                          bh: $("#bh").val(),
                          mc: $("#mc").val(),
                          zdr: $("#zdr").val(),
                          djr: $("#djr").val(),
                          djsj: $("#Tdate").val(),
                          ze: $("#sumSalary").val(),
                          bz: $("#bz").val()
                      }
                      var arr = new Array();
                      for (var i = 0; i < cd ; i++) {
                          var salary_standard_details = {
                              bh: $("#bh").val(),
                              mc: $("#mc").val(),
                              xh: $("#pid" + (i) + "").val(),
                              xcmc: $("#details" + (i + 1) + "").val(),
                              je: $("#salary" + (i + 1) + "").val()
                          };
                          arr[i] = salary_standard_details;
                      }
                      $.ajax({
                          url: "/salary_standard/Add",
                          type: "post",
                          data: "salary_standard=" + JSON.stringify(salary_standard) + "&salary_standard_details=" + JSON.stringify(arr),
                          success: function (msg) {
                              if (msg =="OK") {
                                  alert("添加成功")
                                  location.href = "../salary_standard/Index";
                              } else {
                                  alert("添加失败")
                              }
                          }
                      });
                  }

              }
          })
          vm.load();
       
          function countMoney(id) {
            
              if (isNaN($("#salary" + id).val()) || $("#salary" + id).val() < 0) {
                  alert("金额填写错误!");
                  document.getElementById(o).value = "0.00";
                  return;
              }
              var sum1 = 0;
              for (var i = 1; i <= cd; i++) {
                  var salary = document.getElementById("salary" + i).value;
                  if (salary == "") {
                      salary = "0.00";
                  }
                  sum1 = Number(sum1) + Number(salary);

              }
              $("#sumSalary").val(sum1);
          }
          function time() {
              var tdate = document.getElementById("Tdate");
              var d = new Date();
              var y = d.getFullYear();
              var moth = d.getMonth() + 1;
              var date = d.getDate();
              var h = d.getHours();
              var m = d.getMinutes();
              var s = d.getSeconds();
              var hh = 20 - 1 - h;
              var mm = 60 - 1 - m;
              var ss = 60 - s;
              if (hh > 0) {
                  mm = mm + 60 * hh;
              }
              if (moth < 10) {
                  moth = "0" + moth;
              }
              if (date < 10) {
                  date = "0" + date;
              }
              if (h < 10) {
                  h = "0" + h;
              }
              if (m < 10) {
                  m = "0" + m;
              }
              if (s < 10) {
                  s = "0" + s;
              }
              if (mm < 10) {
                  mm = "0" + mm;
              }
              if (ss < 10) {
                  ss = "0" + ss;
              }

              tdate.value = y + "-" + moth + "-" + date ;

          }
          window.onload = time;
        
    </script>
</body>
</html>
