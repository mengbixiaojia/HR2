
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="Vue">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--招聘管理--面试管理--面试结果登记--有效简历列表
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="10%" class="TD_STYLE1">
                    档案编号
                </td>
                <td width="15%" class="TD_STYLE1">
                    姓名
                </td>
                <td width="15%" class="TD_STYLE1">
                    性别
                </td>
                <td width="20%" class="TD_STYLE1">
                    职位分类
                </td>
                <td width="15%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="10%" class="TD_STYLE1">
                    电话号码
                </td>
                <td width="10%" class="TD_STYLE1">
                    面试状态
                </td>
                <td width="15%" class="TD_STYLE1">
                    登记
                </td>
            </tr>
            <tr v-for="(item,i) in dt">
                <td class="TD_STYLE2">
                    {{item.Id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_sex}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_major_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_major_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_mobilephone}}
                </td>
                <td class="TD_STYLE2">
                    待面试
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/engage_interview/Add/'+item.Id]">登记</a>
                </td>
            </tr>

        </table>
        <p>
            &nbsp;&nbsp;总数：@ViewData["rows"] 例 &nbsp;&nbsp;&nbsp;当前第{{ye}} 页 /每页显示 10 条 &nbsp;&nbsp;&nbsp;共 @ViewData["page"] 页 &nbsp;&nbsp;&nbsp;
            <a v-on:click="SYY">上一页</a> &nbsp;&nbsp;&nbsp;
            <a v-on:click="XYY">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="currPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" v-on:click="go" width=18 height=18 border=0>
        </p>
    </div>
    <script type="text/javascript">
        var page = @ViewData["page"];
        var dqy = 1;
        var vm = new Vue({
            el: "#Vue",
            data: {
                dt: null,
                ye:1
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/engage_interview/Index1",
                        type: "post",
                        data: "dqy=" + dqy,
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                        }
                    })
                },
                SYY: function () {
                    if (dqy>1) {
                        dqy--;
                        this.ye--
                    } else {
                        dqy=1
                        this.ye=1
                    }
                    this.load();
                },
                XYY: function () {
                    if (dqy<page) {
                        dqy++;
                        this.ye++
                    } else {
                        dqy=page
                        this.ye=page
                    }
                    this.load();
                },
                go: function () {
                    dqy = $("#currPage").val();
                    if (page >= dqy) {
                        this.ye=dqy;
                        this.load();
                        $("#currPage").val("");
                    } else {
                        alert("憨憨!");
                        $("#currPage").val("");
                    }
                }
            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
