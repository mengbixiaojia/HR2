
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>right_list</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-easyui-1.3.5/jquery.min.js"></script>
    <script src="~/Scripts/jquery-easyui-1.3.5/jquery.easyui.min.js"></script>
    <link href="~/Scripts/jquery-easyui-1.3.5/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-easyui-1.3.5/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-easyui-1.3.5/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="div1"> 
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--角色管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前角色总数：@ViewData["zs"]例
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添加角色", "right_add", new { @class = "BUTTON_STYLE1" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    角色编号
                </td>
                <td class="TD_STYLE1">
                    角色名称
                </td>
                <td class="TD_STYLE1">
                    角色说明
                </td>
                <td class="TD_STYLE1">
                    是否可用
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>
            <tr v-for="(item,index) in dt">
                <td class="TD_STYLE2">{{item.RoleID}}</td>
                <td class="TD_STYLE2">{{item.RoleName}}</td>
                <td class="TD_STYLE2">{{item.RoleExplain}}</td>
                <td class="TD_STYLE2">{{item.IsOK}}</td>
                <td class="TD_STYLE2">
                    <a v-on:click="Up" v-bind:href="['/right_list/right_list_information/'+item.RoleID]"><img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" /></a>
                    <a v-bind:href="['/right_list/Delete/'+item.RoleID]" onclick="return confirm('是否确定删除')"><img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" /></a>
                </td>
            </tr>
        </table>
        <p style="text-align:center;">
            <input type="image" v-on:click="first" img src="~/images/first.gif" />&nbsp;&nbsp;
            <input type="image" v-on:click="prev" img src="~/images/back.gif" />&nbsp;&nbsp;
            <input type="image" v-on:click="next" img src="~/images/next.gif" />&nbsp;&nbsp;
            <input type="image" v-on:click="last" img src="~/images/last.gif" />
        </p>
    </div>
    <script type="text/javascript">
        var ye = 1;
        var pages = @ViewData["page"];
        var vm = new Vue({
            el: "#div1",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/right_list/Index2",
                        type: "post",
                        data: "ye="+ye,
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                            console.info(pages);
                        }
                    })
                },
                //第一页
                first: function () {
                    ye = 1;
                    this.load();
                },
                //上一页
                prev: function () {
                    if (ye > 1) {
                        ye--;
                    } else {
                        ye = 1;
                    }
                    this.load();
                },
                //下一页
                next: function () {
                    if (ye < pages) {
                        ye++;
                    } else {
                        ye = pages;
                    }
                    this.load();
                },
                //最后一页
                last: function () {
                    ye = pages;
                    this.load();
                },
                //显示
                Up: function (uid) {
                   // $("#UP").text(uid);
                    $('#tt').tree({
                        url:'/right_list/er',
                        checkbox: true,
                        onLoadSuccess: function (node, data) {
                            console.info(data);
                            if (data != null) {
                                //遍历节点数据
                                for (var i = 0; i < data.length; i++) {
                                    var dt = data[i];//取某个节点数据
                                    if (dt.state == "closed")//判断是否是根节点
                                    {
                                        //展开数控件
                                        $("#tt").tree("expandAll")
                                    }
                                }
                            }
                        }
                    });
                },
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
